<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homePage">
    <fragment
        android:id="@+id/homePage"
        android:name="com.example.habits.fragments.home.HomeFragment"
        android:label="HomePage"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homePage_to_detailsPage"
            app:destination="@id/habitDetails"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_left" />
    </fragment>

    <fragment
        android:id="@+id/habitDetails"
        android:name="com.example.habits.fragments.details.HabitDetails"
        android:label="habitDetails"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="habitData"
            app:argType="com.example.habits.models.Habit" />
    </fragment>
</navigation>